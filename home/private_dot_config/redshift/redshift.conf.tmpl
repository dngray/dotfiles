{{- if not .headless }}
; Global settings
[redshift]
temp-day=6500K
temp-night=5000
transition=1
;gamma=0.8:0.7:0.8
gamma=1.000:1.000:1.000
location-provider=manual
adjustment-method=randr
;brightness=1.0:0.5

; The location provider and adjustment method settings
; are in their own sections.
; This is an example lat long for {{ .place }}
[manual]
lat={{ .latitude }}
lon={{ .longitude }}
{{- end -}}
