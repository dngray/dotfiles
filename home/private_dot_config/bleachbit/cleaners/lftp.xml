<cleaner id="lftp" os="linux">
  <label>LFTP</label>
  <description>File transfer client</description>
  <option id="cwd_history">
    <label>cwd_history</label>
    <description>Delete the working directory history</description>
    <action command="delete" search="file" path="$XDG_DATA_HOME/lftp/cwd_history"/>
  </option>
  <option id="rl_history">
    <label>rl_history</label>
    <description>Delete the rl history</description>
    <action command="delete" search="file" path="$XDG_DATA_HOME/lftp/rl_history"/>
  </option>
  <option id="transfer_log">
    <label>transfer_log</label>
    <description>Delete the transfer log</description>
    <action command="delete" search="file" path="$XDG_DATA_HOME/lftp/transfer_log"/>
  </option>
</cleaner>
