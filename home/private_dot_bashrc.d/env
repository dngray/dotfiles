# vim: filetype=sh
# .bashrc.d/env

## User Directories
## https://wiki.archlinux.org/index.php/XDG_Base_Directory_support
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"

## Set default FZF command
## https://medium.com/@sidneyliebrand/how-fzf-and-ripgrep-improved-my-workflow-61c7ca212861
export FZF_DEFAULT_COMMAND='rg --files --no-ignore-vcs --hidden'

if [[ "$(hostname)" = "toolbox" ]] ; then
    export EDITOR='/usr/bin/nvim'
    export SVN_EDITOR='/usr/bin/nvim'
else
    export EDITOR='flatpak run io.neovim.nvim'
    export SVN_EDITOR='flatpak run io.neovim.nvim'
fi

set -o vi
eval "$(dircolors ~/.config/dircolors-solarized/dircolors.256dark)"
export MC_SKIN="$XDG_CONFIG_HOME/selenized/other-apps/mc/selenized.ini"
export TERM="xterm-256color"

export PATH="$PATH:$HOME/.local/bin"
export VAULT_ADDR="https://vault.den.home.arpa"
