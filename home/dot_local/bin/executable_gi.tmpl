#!/bin/sh

# Shell script to stop|start|status goimapnotify

accountNum={{ (output "sh" "-c" "ls ~/.local/share/chezmoi/home/private_dot_config/goimapnotify/ | wc -l") -}}

cmd() {
	i=1
	while [ $i -le "$accountNum" ]; do
		systemctl --user "$1" goimapnotify@"$i".service
		i=$(("$i" + 1))
	done
}

if [ "$1" = "stop" ]; then
	cmd "$1"
elif [ "$1" = "start" ]; then
	cmd "$1"
elif [ "$1" = "status" ]; then
	cmd "$1"
else
	echo "error"
fi
